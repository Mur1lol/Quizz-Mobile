<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".app.PerguntaActivity" android:background="#FFEE56">

    <TextView
            android:text="MENSAGEM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtMensagem" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:gravity="center" android:textColor="@android:color/black"
            android:textSize="30sp"/>
    <Button
            android:text="NOVA PERGUNTA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btNovaPergunta" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp" android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp" android:layout_marginRight="50dp"
            app:layout_constraintTop_toBottomOf="@+id/txtMensagem" android:layout_marginTop="50dp"
            android:background="@drawable/button_border"/>
    <Button
            android:text="PERGUNTA LOCAL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btPerguntaLocal" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/btNovaPergunta" android:background="@drawable/button_border"/>
    <Button
            android:text="RANKING"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btRanking" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/btPerguntaLocal" android:background="@drawable/button_border"/>
    <Button
            android:text="SAIR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btDeslogar" android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp" android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp" android:layout_marginRight="50dp"
            android:background="@drawable/button_border"/>
</androidx.constraintlayout.widget.ConstraintLayout>