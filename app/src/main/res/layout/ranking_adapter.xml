<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" app:cardCornerRadius="25dp"
                                   app:cardElevation="10dp" android:layout_margin="5dp" android:id="@+id/cardRanking">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp" app:srcCompat="@drawable/ic_account_box_black_24dp"
                android:id="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                tools:ignore="VectorDrawableCompat"
                android:layout_marginTop="8dp" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
        <TextView
                android:text="@string/nome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:textColor="@android:color/black" android:textSize="18sp"
                android:textStyle="bold" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/textView7" android:layout_marginRight="8dp"/>
        <TextView
                android:text="Luqueta Paqueta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtNick"
                android:textColor="@android:color/black" android:textSize="14sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/txtPonto" android:layout_marginRight="8dp"/>
        <TextView
                android:text="@string/pontos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
                android:textSize="18sp" android:textColor="@android:color/black"
                android:textStyle="bold" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="1000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtPonto" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
        />
        <TextView
                android:text="Data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtData" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:textColor="@android:color/black"
                android:gravity="center" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:textStyle="bold"
                android:layout_marginTop="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>